# Required API Keys
GOV_API_KEY=your_government_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional API Keys
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Model Settings
OPENAI_MODEL=gpt-5.2
EMBEDDING_MODEL=text-embedding-3-small
LLM_PROVIDER=openai
DEFAULT_API_MODE=responses

# Server
PORT=8001

# RAG / PDF Memory
RAG_PERSIST_DIR=./chroma
RAG_COLLECTION=pdf_memory
RAG_CHUNK_SIZE=1200
RAG_CHUNK_OVERLAP=200
RAG_MAX_CHUNKS=500
RAG_TOP_K=5

# Chroma (JS client requires server; auto-started if available)
CHROMA_SERVER_HOST=127.0.0.1
CHROMA_SERVER_PORT=8002
CHROMA_SERVER_URL=http://127.0.0.1:8002
CHROMA_AUTO_START=true

# Search.gov (optional)
SEARCHGOV_AFFILIATE=
SEARCHGOV_ACCESS_KEY=
